---
import "@skele/styles/skele.pcss";
import { z } from "zod/v4";
const libraryLayoutSchema = z.object({
  title: z.string().default("Skele Library"),
});

import Section from "@skele/components/layouts/Section/index.astro";
import Nav from "@skele/components/navigation/nav/index.astro";
import NavItem from "@skele/components/navigation/navItem/index.astro";
import NavList from "@skele/components/navigation/navList/index.astro";

const props = libraryLayoutSchema.parse(Astro.props);
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{props.title}</title>
    <slot name="head" />
  </head>
  <body>
    <Section maxContentWidth="2xl" padding={{ horizontal: "md", vertical: "sm" }}>
      <Nav layout="vertical">
        <img src="/assets/images/skele-light.svg" alt="Logo" height="32" width="110" slot="brand">
        <NavList slot="menu">
          <NavItem href="/" label="Home" iconName="hero/home" />
          <NavItem label="Features">
            <NavList>
              <NavItem href="/features/one" label="Feature One" />
              <NavItem href="/features/two" label="Feature Two" />
            </NavList>
          </NavItem>
        </NavList>
      </Nav>
      <slot />
    </Section>
  </body>
</html>
