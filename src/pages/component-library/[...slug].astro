---
import LibraryLayout from "@component-library/layouts/Librarylayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  // Skip component library routes if DISABLE_COMPONENT_LIBRARY is set
  if (process.env.DISABLE_COMPONENT_LIBRARY === "true") {
    return [];
  }

  const pages = await getCollection("docs-pages");

  const paths: Array<{ params: { slug: string }; props: { page: any } }> = [];

  pages.forEach((page) => {
    if (page.id === "index") {
      paths.push({
        params: { slug: "" },
        props: { page },
      });
    } else {
      paths.push({
        params: { slug: page.id },
        props: { page },
      });
    }
  });

  return paths;
}

const { page } = Astro.props;
const { Content } = await render(page);
---

<LibraryLayout frontmatter={page.data}>
  <Content />
</LibraryLayout>
