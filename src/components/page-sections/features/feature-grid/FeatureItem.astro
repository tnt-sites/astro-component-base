---
import Heading from "@core-elements/heading/Heading.astro";
import Icon from "@core-elements/icon/Icon.astro";
import Text from "@core-elements/text/Text.astro";
import Card from "@wrappers/card/Card.astro";

const {
  title = "",
  description = "",
  iconName = "",
  iconColor = "default",
  iconBackground = true,
  class: className,
  _component,
  ...htmlAttributes
} = Astro.props;
---

<Card
  {...htmlAttributes}
  class:list={["feature-item", className]}
  paddingHorizontal="lg"
  paddingVertical="lg"
  rounded
  border
  backgroundColor="base"
>
  <Icon
    class="feature-icon"
    name={iconName}
    size="lg"
    color={iconColor}
    background={iconBackground}
    alignX="start"
  />
  <Heading class="feature-title" level="h3" size="md" alignX="start" data-prop="title">
    {title}
  </Heading>
  <Text class="feature-description" alignX="start" data-prop="description" text={description} />
</Card>

<style lang="pcss" is:global>
  @layer page-sections {
    .feature-title {
      margin-bottom: var(--spacing-sm);
      margin-top: var(--spacing-sm);
    }

    .feature-description {
      margin-top: 0;
    }
  }
</style>
