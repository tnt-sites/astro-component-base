---
import CustomSection from "@builders/custom-section/CustomSection.astro";
import Heading from "@core-elements/heading/Heading.astro";
import Text from "@core-elements/text/Text.astro";
import ButtonGroup from "@wrappers/button-group/Buttongroup.astro";

const {
  heading = "",
  subtext = "",
  buttonSections = [],
  colorScheme,
  backgroundColor,
  paddingVertical = "4xl",
  class: className,
  rounded = false,
  ...rest
} = Astro.props;
---

<CustomSection
  class:list={["cta-center", className]}
  maxContentWidth="lg"
  paddingHorizontal="lg"
  paddingVertical={paddingVertical}
  colorScheme={colorScheme}
  backgroundColor={backgroundColor}
  rounded={rounded}
  {...rest}
>
  <div class="stack">
    {
      heading && (
        <Heading level="h2" size="xl" alignX="center" data-prop="heading">
          {heading}
        </Heading>
      )
    }
    {
      subtext && (
        <Text alignX="center" data-prop="subtext" text={subtext} />
      )
    }
    {
      buttonSections?.length > 0 && (
        <ButtonGroup class="buttons" buttonSections={buttonSections} alignX="center" />
      )
    }
  </div>
</CustomSection>
