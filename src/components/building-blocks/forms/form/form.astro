---
import RenderBlock from "@components/utils/renderBlock.astro";

const { action, formBlocks = [], class: className, ...rest } = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(rest).filter(([key]) => key !== "_component")
);
---

<form
  class:list={["form", className]}
  action={action}
  method="post"
  enctype="text/plain"
  {...htmlAttributes}
>
  <RenderBlock contentBlocks={formBlocks} propName="formBlocks" />
  <slot />
</form>

<style lang="pcss">
  .form {
    margin-top: var(--spacing-lg);
    width: 100%;
  }
</style>
