---
const {
  label,
  name,
  placeholder,
  required = false,
  value,
  class: className,
  _component,
  ...htmlAttributes
} = Astro.props;

const fieldId = htmlAttributes.id || `textarea-${crypto.randomUUID()}`;
---

<div class:list={["textarea", className]}>
  {
    label && (
      <label for={fieldId} class="label">
        {label}
        {required && (
          <span class="textarea-required" aria-label="required">
            *
          </span>
        )}
      </label>
    )
  }
  <textarea
    name={name}
    id={fieldId}
    placeholder={placeholder}
    required={required}
    aria-required={required}
    class="field"
    {...htmlAttributes}>{value}</textarea
  >
</div>

<style lang="pcss" is:global>
  @layer components {
    .textarea {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-xs);
      width: 100%;
      margin: 0;
      margin-bottom: var(--spacing-md);

      .textarea-required {
        color: red;
        margin-inline-end: var(--spacing-em-xs);
      }
    }
  }
</style>
