---
const {
  label,
  name,
  type = "text",
  placeholder,
  required = false,
  value,
  class: className,
  _component,
  ...htmlAttributes
} = Astro.props;

const fieldId = htmlAttributes.id || `input-${crypto.randomUUID()}`;
---

<div class:list={["input", className]}>
  {
    label && (
      <label for={fieldId} class="label">
        {label}
        {required && (
          <span class="input-required" aria-label="required">
            *
          </span>
        )}
      </label>
    )
  }
  <input
    type={type}
    name={name}
    id={fieldId}
    placeholder={placeholder}
    required={required}
    aria-required={required}
    value={value}
    class="field"
    {...htmlAttributes}
  />
</div>

<style lang="pcss" is:global>
  @layer components {
    .input {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-xs);
      width: 100%;
      margin: 0;
      margin-bottom: var(--spacing-md);

      .input-required {
        color: red;
        margin-inline-end: var(--spacing-em-xs);
      }
    }
  }
</style>
