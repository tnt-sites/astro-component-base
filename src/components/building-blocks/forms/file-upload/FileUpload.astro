---
const {
  label,
  name,
  required = false,
  accept,
  multiple = false,
  class: className,
  _component,
  ...htmlAttributes
} = Astro.props;

const fieldId = htmlAttributes.id || `file-upload-${crypto.randomUUID()}`;
---

<div class:list={["file-upload", className]}>
  {
    label && (
      <label for={fieldId} class="label">
        {label}
        {required && (
          <span class="file-upload-required" aria-label="required">
            *
          </span>
        )}
      </label>
    )
  }
  <input
    type="file"
    name={name}
    id={fieldId}
    required={required}
    aria-required={required}
    accept={accept}
    multiple={multiple}
    class="field"
    {...htmlAttributes}
  />
</div>

<style lang="pcss" is:global>
  @layer components {
    .file-upload {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-xs);
      width: 100%;
      margin: 0;
      margin-bottom: var(--spacing-md);

      .file-upload-required {
        color: red;
        margin-inline-end: var(--spacing-em-xs);
      }
    }
  }
</style>
