---
const { paddingVertical = "md", class: className, _component, ...htmlAttributes } = Astro.props;
---

<div
  class:list={["divider", className, `padding-y-${paddingVertical}`]}
  {...htmlAttributes}
  aria-hidden="true"
>
  <hr class="rule" />
</div>

<style lang="pcss" is:global>
  @layer components {
    .divider {
      &.padding-y-none {
        padding: 0;
      }

      &.padding-y-xs {
        padding-block: var(--spacing-xs);
      }

      &.padding-y-sm {
        padding-block: var(--spacing-sm);
      }

      &.padding-y-md {
        padding-block: var(--spacing-md);
      }

      &.padding-y-lg {
        padding-block: var(--spacing-lg);
      }

      &.padding-y-xl {
        padding-block: var(--spacing-xl);
      }

      &.padding-y-2xl {
        padding-block: var(--spacing-2xl);
      }

      &.padding-y-3xl {
        padding-block: var(--spacing-3xl);
      }

      > .rule {
        margin: 0;
        border: 0;
        border-top: 2px solid var(--color-border-subtle);
      }
    }
  }
</style>
