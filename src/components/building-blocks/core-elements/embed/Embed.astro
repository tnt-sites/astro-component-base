---
const { html, aspectRatio = "landscape", class: className, _component, ...htmlAttributes } = Astro.props;
---

<div
  class:list={["embed-wrapper", `ratio-${aspectRatio}`, className]}
  set:html={html}
  {...htmlAttributes}
/>

<style is:global>
  @layer components {
    .embed-wrapper {
      margin-top: var(--spacing-lg);

      iframe {
        border: none;
        display: block;
        height: 100%;
        width: 100%;
      }

      &.ratio-square {
        aspect-ratio: var(--ratio-square);
      }

      &.ratio-landscape {
        aspect-ratio: var(--ratio-landscape);
      }

      &.ratio-portrait {
        aspect-ratio: var(--ratio-portrait);
      }

      &.ratio-widescreen {
        aspect-ratio: var(--ratio-widescreen);
      }
    }
  }
</style>
