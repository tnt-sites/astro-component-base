---
import clsx from "clsx";
// @ts-ignore
import markdownit from "markdown-it";
const md = markdownit({ html: true });

const { text, align, size, className, id, ariaLabel } = Astro.props;

const textContent = text || "";
const markdownContent = textContent ? md.render(textContent) : "";

const classAttr = clsx("rich-text", className, `align-${align}`, `size-${size}`);
---

<div
  class={classAttr}
  {...id ? { id } : {}}
  {...ariaLabel ? { "aria-label": ariaLabel } : {}}
  set:html={markdownContent}
/>

<style is:global>
  .rich-text table {
    margin: 1em 0;
    border-collapse: collapse;
    overflow-x: auto;
    display: table;
  }

  .rich-text thead th {
    font-weight: 600;
    text-align: left;
  }

  .rich-text th,
  .rich-text td {
    padding: 0.75rem 1rem;
    vertical-align: top;
  }

  .rich-text tbody tr:nth-child(even) {
    background-color: transparent;
  }

  .rich-text table p {
    margin: 0;
  }

  .rich-text ul,
  .rich-text ol {
    padding-left: 2.25rem;
  }
</style>

<style is:global>
  .rich-text {
    font-family: var(--font-body);
    line-height: 1.6;
  }

  .rich-text h1,
  .rich-text h2,
  .rich-text h3,
  .rich-text h4,
  .rich-text h5,
  .rich-text h6 {
    font-family: var(--font-heading);
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    line-height: 1.2;
    color: #444444;
    font-weight: normal;
  }

  .rich-text p {
    margin-top: 0;
    margin-bottom: 1em;
  }

  .rich-text blockquote {
    margin: 1em 0;
    padding: 1em;
    font-style: italic;
  }

  .rich-text code {
    padding: 0.125em 0.25em;
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  .rich-text pre {
    padding: 1em;
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin-bottom: 1em;
  }

  .rich-text pre code {
    background: none;
    padding: 0;
  }

  .rich-text a {
    text-decoration: underline;
    color: #3a3a3a;
  }

  .rich-text a:hover {
    color: #005c93;
  }

  .size-xs {
    font-size: 0.75rem;
  }
  .size-s {
    font-size: 0.875rem;
  }
  .size-m {
    font-size: 1rem;
  }
  .size-l {
    font-size: 1.125rem;
  }
  .size-xl {
    font-size: 1.25rem;
  }
  .size-2xl {
    font-size: 1.5rem;
  }
  .size-3xl {
    font-size: 1.875rem;
  }
  .size-4xl {
    font-size: 2.25rem;
  }
  .size-5xl {
    font-size: 3rem;
  }
  .size-6xl {
    font-size: 3.75rem;
  }

  /* Text alignment */
  .align-start {
    text-align: start;
  }
  .align-center {
    text-align: center;
  }
  .align-end {
    text-align: end;
  }
</style>
