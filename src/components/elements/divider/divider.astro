---
const { padding = "md", class: className, ...rest } = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(rest).filter(([key]) => key !== "_bookshop_name")
);
---

<div
  class:list={["divider", className, `padding-y-${padding}`]}
  {...htmlAttributes}
  aria-hidden="true"
>
  <hr class="rule" />
</div>
