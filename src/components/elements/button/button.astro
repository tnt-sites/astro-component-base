---
import clsx from "clsx";
import Icon from "../icon/icon.astro";

const { label, link, iconName, iconPosition, hideText, variant, size, ...restProps } = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(restProps).filter(([key]) => !key.startsWith("_"))
);

const classNames = clsx(
  "button",
  `size-${size}`,
  `variant-${variant}`,
  hideText && "icon-only",
  iconPosition === "after" && "icon-after",
  className
);

if (hideText && !htmlAttributes["aria-label"]) {
  htmlAttributes["aria-label"] = label;
}

const Tag = link ? "a" : "button";
const elementProps = {
  ...htmlAttributes,
  ...(link ? { href: link, role: "button" } : { type: "button" }),
};
---

<Tag {...elementProps as any} class:list={classNames}>
  {iconName && <Icon name={iconName} buttonIcon size="none" class="button-icon" />}
  {label && <span class:list={hideText ? "sr-only" : "label"}>{label}</span>}
</Tag>

<style>
  .button {
    align-items: center;
    background-color: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xs);
    color: var(--color-text-strong);
    display: inline-flex;
    font-weight: var(--font-weight-medium);
    gap: 0.15em;
    justify-content: center;
    min-height: 10px;
    min-width: 10px;
    padding-block: var(--space-em-sm);
    padding-inline: var(--space-em-sm);
    text-align: center;
    text-decoration: none;
    transition-duration: var(--flinch);
    transition-property: background-color, color, border-color;
    transition-timing-function: ease-in-out;
    vertical-align: middle;

    &:hover,
    &:focus {
      background-color: var(--color-bg-muted);
      border-color: var(--color-border-strong);
      color: var(--color-text-strong);
      cursor: pointer;
      outline: var(--color-focus-ring);
      outline-offset: 4px;
    }

    &.icon-only {
      padding: var(--space-em-xs);
    }

    &.icon-after {
      flex-direction: row-reverse;
    }
  }

  .variant {
    &-primary {
      background-color: var(--color-bg-brand);
      border-color: transparent;
      color: var(--color-text-on-brand);

      &:hover,
      &:focus {
        background-color: var(--color-bg-brand-muted);
        border-color: transparent;
        color: var(--color-text-on-brand);
      }
    }

    &-secondary {
      background-color: var(--color-bg-muted);
      border-color: transparent;
      color: var(--color-text-strong);

      &:hover,
      &:focus {
        background-color: var(--color-bg-strong);
        border-color: transparent;
        color: var(--color-text-strong);
      }
    }

    &-tertiary {
      background-color: transparent;
      border-color: var(--color-border-strong);
      color: var(--color-text-strong);

      &:hover,
      &:focus {
        background-color: var(--color-state-hover);
        border-color: var(--color-border-strong);
        color: var(--color-text-strong);
      }
    }

    &-ghost {
      background-color: transparent;
      border-color: transparent;
      color: var(--color-text-strong);

      &:hover,
      &:focus {
        background-color: var(--color-bg-muted);
        border-color: transparent;
        color: var(--color-text-strong);
      }
    }
  }

  .size {
    &-sm {
      font-size: var(--font-size-xs);
    }

    &-md {
      font-size: var(--font-size-md);
    }

    &-lg {
      font-size: var(--font-size-xl);
    }
  }
</style>
