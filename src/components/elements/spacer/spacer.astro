---
import clsx from "clsx";

const { height = "md", class: className, ...rest } = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(rest).filter(([key]) => !key.startsWith("_"))
);

const classNames = clsx("spacer", className, `height-${height}`);
---

<div class:list={classNames} {...htmlAttributes} aria-hidden="true"></div>

<style>
  .spacer {
    height: 0;

    &.height-xs {
      height: var(--spacing-xs);
    }

    &.height-sm {
      height: var(--spacing-sm);
    }

    &.height-md {
      height: var(--spacing-md);
    }

    &.height-lg {
      height: var(--spacing-lg);
    }

    &.height-xl {
      height: var(--spacing-xl);
    }

    &.height-2xl {
      height: var(--spacing-2xl);
    }

    &.height-3xl {
      height: var(--spacing-3xl);
    }
  }
</style>
