---
const {
  items,
  horizontalAlignment = "start",
  class: className,
  ...restProps
} = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(restProps).filter(([key]) => !key.startsWith("_"))
);
---

<dl class:list={[
  "definition-list", 
  `alignment-${horizontalAlignment}`, 
  className
]} {...htmlAttributes}>
  {
    items.map((item: any) => {
      return (
        <dt class="title" role="term"><strong>{item.title}</strong></dt>
        <dd class="content" role="definition">{item.text}</dd>
      );
    })
  }
</dl>
