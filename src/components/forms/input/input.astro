---
const {
  label,
  name,
  type = "text",
  placeholder,
  required = false,
  value,
  class: className,
  ...rest
} = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(rest).filter(([key]) => key !== "_bookshop_name")
);

const fieldId = htmlAttributes.id || `input-${crypto.randomUUID()}`;
---

<div class:list={["input", className]}>
  {
    label && (
      <label for={fieldId} class="label">
        {label}
        {required && (
          <span class="required" aria-label="required">
            *
          </span>
        )}
      </label>
    )
  }
  <input
    type={type}
    name={name}
    id={fieldId}
    placeholder={placeholder}
    required={required}
    aria-required={required}
    value={value}
    class="field"
    {...htmlAttributes}
  />
</div>
