---
const {
  label,
  name,
  required = false,
  accept,
  multiple = false,
  class: className,
  ...rest
} = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(rest).filter(([key]) => key !== "_bookshop_name")
);

const fieldId = htmlAttributes.id || `file-upload-${crypto.randomUUID()}`;
---

<div class:list={["file-upload", className]}>
  {
    label && (
      <label for={fieldId} class="label">
        {label}
        {required && (
          <span class="required" aria-label="required">
            *
          </span>
        )}
      </label>
    )
  }
  <input
    type="file"
    name={name}
    id={fieldId}
    required={required}
    aria-required={required}
    accept={accept}
    multiple={multiple}
    class="field"
    {...htmlAttributes}
  />
</div>
