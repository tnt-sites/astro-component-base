---
const { label, name, required = false, value, min, max, class: className, ...rest } = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(rest).filter(([key]) => key !== "_bookshop_name")
);

const fieldId = htmlAttributes.id || `date-${crypto.randomUUID()}`;
---

<div class:list={["date", className]}>
  {
    label && (
      <label for={fieldId} class="label">
        {label}
        {required && (
          <span class="required" aria-label="required">
            *
          </span>
        )}
      </label>
    )
  }
  <input
    type="date"
    name={name}
    id={fieldId}
    required={required}
    aria-required={required}
    value={value}
    min={min}
    max={max}
    class="field"
    {...htmlAttributes}
  />
</div>
