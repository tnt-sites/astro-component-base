---
const { name, value, class: className, ...rest } = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(rest).filter(([key]) => key !== "_bookshop_name")
);
---

<input
  type="hidden"
  name={name}
  value={value}
  class:list={["hidden", className]}
  {...htmlAttributes}
/>
