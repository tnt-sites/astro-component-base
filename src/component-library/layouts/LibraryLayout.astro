---
import "@component-library/styles/component-library.pcss";
import "@styles/style.pcss";
import { z } from "zod/v4";

const libraryLayoutSchema = z.object({
  frontmatter: z
    .object({
      title: z.string().optional(),
      contentSections: z.array(z.any()).optional(),
    })
    .optional(),
});

import CustomSection from "@builders/custom-section/CustomSection.astro";
import MobileNavLayout from "@component-library/layouts/MobileNavLayout.astro";
import SidebarNavLayout from "@component-library/layouts/SidebarNavLayout.astro";
import RenderBlock from "@components/utils/renderBlock.astro";
const props = libraryLayoutSchema.parse(Astro.props);
const pageTitle = props.frontmatter?.title || "Component Library";
const contentSections = props.frontmatter?.contentSections || [];
---

<!doctype html>
<html lang="en" data-theme="default">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <style is:inline>
      @layer reset, base, components, page-sections, utils, overrides;
    </style>
    <title>{pageTitle}</title>
    <slot name="head" />
  </head>
  <body class="component-library">
    <MobileNavLayout />
    <CustomSection
      maxContentWidth="2xl"
      paddingHorizontal="md"
      paddingVertical="none"
      class="library-container"
    >
      <SidebarNavLayout />
      <main class="main">
        <RenderBlock contentSections={contentSections} />
        <slot />
      </main>
    </CustomSection>
    <script>
      import "@choctawnationofoklahoma/lite-vimeo";
      import "@justinribeiro/lite-youtube";
    </script>
  </body>
</html>
