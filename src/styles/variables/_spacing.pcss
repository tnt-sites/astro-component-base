:where(:root) {
  --spacing-none: 0;
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-2xl: 3rem;
  --spacing-3xl: 4rem;
  --spacing-4xl: 5rem;
  --spacing-5xl: 6rem;
  --spacing-6xl: 7rem;

  --spacing-em-xs: 0.25em;
  --spacing-em-sm: 0.5em;
  --spacing-em-md: 1em;
  --spacing-em-lg: 1.5em;
  --spacing-em-xl: 2em;
  --spacing-em-2xl: 3em;
  --spacing-em-3xl: 4em;
  --spacing-em-4xl: 5em;
  --spacing-em-5xl: 6em;
  --spacing-em-6xl: 7em;
}
