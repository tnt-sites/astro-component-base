@custom-media --from-sm (width >= 640px);
@custom-media --from-md (width >= 980px);
@custom-media --from-lg (width >= 1024px);
@custom-media --from-xl (width >= 1280px);
@custom-media --from-2xl (width >= 1536px);

@custom-media --only-sm (640px <= width < 768px);
@custom-media --only-md (768px <= width < 1024px);
@custom-media --only-lg (1024px <= width < 1280px);
@custom-media --only-xl (1280px <= width < 1536px);
@custom-media --only-2xl (1536px <= width);

@custom-media --to-sm (width < 640px);
@custom-media --to-md (width < 768px);
@custom-media --to-lg (width < 1024px);
@custom-media --to-xl (width < 1280px);
@custom-media --to-2xl (width < 1536px);
