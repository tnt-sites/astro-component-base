:where(:root) {
  --layer-auto: auto;
  --layer-0: 0;
  --layer-1: 10; /* Low elements */
  --layer-2: 20; /* Base components */
  --layer-3: 30; /* Dropdowns or modals */
  --layer-4: 40; /* Sticky headers or notifications */
  --layer-5: 50; /* Popovers or tooltips */
  --layer-6: 60; /* Overlays */
  --layer-7: 100; /* High priority elements */
  --layer-8: 1000; /* Critical UI elements */
}
